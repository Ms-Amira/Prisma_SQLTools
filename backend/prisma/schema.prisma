generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Adopter {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phoneNumber Int @unique
  animalsInHome String
  approval ApprovalStatus
  pets Pet[]
}

model Pet {
  id        Int      @id @default(autoincrement())
  name      String
  species String
  breed String
  age Int
  medicalHistory String
  adopterId Int?
  shelterId Int?
  adopter Adopter? @relation(fields: [adopterId], references: [id])
  shelter Shelter? @relation(fields: [shelterId], references: [id])
}

model Shelter {
  id        Int      @id @default(autoincrement())
  name      String
  address String
  phoneNumber Int
  capacity Int
  website String
  pets Pet[]
}

  enum ApprovalStatus {
    PENDING
    APPROVED
    REJECTED
  }